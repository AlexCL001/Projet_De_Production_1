<main class="container text-center">
  <h1 class="mt-120">Rechercher un(e) ami(e)</h1>
  <form action="/rechercheAmi" method="get">
    <input
      class="input mt-80"
      type="text"
      name="rechercheAmi"
      placeholder="recherche d'amis"
    />
    <button class="btn__submit" type="submit" id="btn-recherche">
      Recherche
    </button>
  </form>
  <ul class="mt-50 ul__no-bullet">
    <% if(users){ %> <% users.forEach(function(user){ %>
        <li class="mt-40"><a href="/getAmiProfil/<%= user.id %>" class="link__ami"><%= user.name %></a></li>
    <form action="/ajouterAmi/<%= user.id %>" method="post">
      <% let ami = false; %> <% friendsCompare.forEach(function(friend){ %> <%
      if(user.id == friend.id && ami == false){ %> <% ami = true; %> <% } %> <%
      }); %> <% if(ami == true){ %>
      <button class="mt-10" disabled>Ajouter comme ami</button>
      <% } else if (ami == false) { %>
      <button class="btn__dark-violet mt-10">Ajouter comme ami</button>
      <% } %>
    </form>
    <% }); %> <% }; %>
  </ul>
</main>

